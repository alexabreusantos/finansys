<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane id="AnchorPane" prefHeight="220.0" prefWidth="418.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marjax.finansys.CartaoCadastrarController">
   <children>
      <Pane layoutX="5.0" layoutY="4.0" prefHeight="211.0" prefWidth="408.0" styleClass="borda-pane">
         <children>
            <Label layoutX="16.0" layoutY="14.0" text="Nome" />
            <TextField fx:id="nomeTextField" focusTraversable="false" layoutX="11.0" layoutY="31.0" prefHeight="25.0" prefWidth="386.0" promptText="Digite o nome do cartão" styleClass="campo-nome" />
            <Label layoutX="16.0" layoutY="84.0" text="Limite" />
            <TextField fx:id="limiteTextField" focusTraversable="false" layoutX="14.0" layoutY="103.0" prefHeight="25.0" prefWidth="147.0" promptText="Limite do cartão" styleClass="campo-nome" />
            <Label layoutX="167.0" layoutY="84.0" text="Dia de Fechamento" />
            <ComboBox fx:id="fechamentoComboBox" layoutX="167.0" layoutY="103.0" prefHeight="25.0" prefWidth="111.0" promptText="Selecione" />
            <Label layoutX="283.0" layoutY="84.0" text="Dia de Vencimento" />
            <ComboBox fx:id="vencimentoComboBox" layoutX="283.0" layoutY="103.0" prefHeight="25.0" prefWidth="111.0" promptText="Selecione" />
            <Button fx:id="salvarButton" focusTraversable="false" layoutX="134.0" layoutY="160.0" mnemonicParsing="false" text="Salvar">
               <graphic>
                  <FontAwesomeIcon glyphName="SAVE" />
               </graphic>
            </Button>
            <Button fx:id="cancelarButton" layoutX="200.0" layoutY="160.0" mnemonicParsing="false" onAction="#cancelarCadastro" text="Cancelar">
               <graphic>
                  <FontAwesomeIcon glyphName="TIMES" />
               </graphic>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
